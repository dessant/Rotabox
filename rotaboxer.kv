                on_release: root.zoom('in')
                disabled: True
        Widget:
            size_hint: 1, .05
        Button:
            id: copy_btn
            group: 'utils'
            text: 'Export bounds'
            background_color: .13, .13, .2, 1
            on_release: root.choose_lang();
