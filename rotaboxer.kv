            Widget:
                size_hint: .005, 1
            Button:
                id: next
                group: 'nav'
                background_color: .13, .13, .2, 1
                font_name: 'guifont'
                font_size: '20sp'
                text: 'r'
                on_release: root.navigate('>')
                disabled: True
        Widget:
            size_hint: 1, .05
        ToggleButton:
            id: anim_btn
            group: 'nav'
            text: 'Animation'
            norm_color: .13, .13, .2, 1
            down_color: 1, .1, .1, 1
            background_color: self.norm_color if self.state == 'normal' else self.down_color
            on_state: root.toggle_anim(self.state)
            disabled: True
        Widget:
            size_hint: 1, .05
        Button:
            id: rem_btn
            group: 'edit'
            background_color: .13, .13, .2, 1
            text: 'Delete point'
