        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                texture: app.texture
    ScattBack:
        id: scat
        do_rotation:False
        Sprite:
            id: sprite
            editor: root
            opacity: 0
            canvas.after:
                Color:
                    rgba: .3, .15, .3, 1
                Line:
                    rectangle: self.x,self.y,self.width,self.height
